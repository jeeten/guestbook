{% extends 'main.html.twig' %}

{% block title %}Create an Account!{% endblock %}

{% block body %}
    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}                    
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            {# {{ form_widget(form.name, {'attr': {'class': 'foo'}}) }} #}
                            {{ form_start(registrationForm, { 'attr' : { 'class': 'user' } }) }}
                            {# {% if form_errors(registrationForm) %} #}
                             
                             {% if form_errors(registrationForm.email) %}
                                    <div class="alert alert-danger">   
                                        {{ form_errors(registrationForm.email) }}
                                    </div>
                                {% endif %}
                                {% if form_errors(registrationForm.plainPassword) %}
                                <div class="alert alert-danger">   
                                {{ form_errors(registrationForm.plainPassword) }}
                                </div>
                                {% endif %}

                            {# {% endif %} #}

                            <div class="form-group">
                                {{ form_widget(registrationForm.email,{'attr': {'class': 'form-control form-control-user','placeholder': 'Email Address'}}) }}
                                
                                
                            </div>
                            <div class="form-group">
                                {{ form_widget(registrationForm.plainPassword,{'attr': {'class': 'form-control form-control-user','placeholder': 'Password'}}) }}

                            </div>
                            

                            <div class="custom-checkbox ">
                            {{ form_widget(registrationForm.roles,{'attr': {'class': ''}}) }}
                            </div>
                            <div class="clearfix"></div>
                            

                            {# <i class="fa fa-calendar"></i> {{ form_label(registrationForm.email) }} #}
                                
          
                            {# {{ form_row(registrationForm.email) }} #}
                            {# {{ form_row(registrationForm.plainPassword,{'attr': {'class': 'form-control form-control-user','placeholder': 'Email Address'}}) }} #}
                            <button class="btn btn-primary btn-user btn-block">Register</button>
                            {{ form_end(registrationForm) }}
                            <hr>
                            {# <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div> #}
                            <div class="text-center">
                                <a class="small" href="{{ path('login') }}">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
